<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:itemBackground">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:titleTextColor">@color/colorText</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColorAlertDialogListItem">@color/colorText</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorGray</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:navigationBarColor">@color/colorTransparent</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="CustomAlertDialog" parent="Base.ThemeOverlay.MaterialComponents.Dialog" >
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/colorBackground</item>
    </style>
</resources>